<application>
<name> yarp-glhpe </name>

<dependencies>
</dependencies>

<module>
   <name> yarpview </name>
   <parameters>--name /view_out --synch </parameters>
   <node> localhost </node>
</module>

<module>
   <name> /usr/local/hpe-core/example/yarp-glhpe/build/./glhpe-framer </name>
   <parameters>--name /glhpe-framer </parameters>
   <node> localhost </node>
</module>

<module>
   <name> python3 /usr/local/hpe-core/example/yarp-glhpe/run-model.py </name>
   <parameters>--name /run-model </parameters>
   <node> localhost </node>
</module>

<module>
    <name> vFramerLite </name>
    <parameters> --displays "(/vis (F AE ISO))" --height 260 --width 346 </parameters>
    <node> localhost </node>
</module>

<module>
   <name> yarpdataplayer </name>
   <parameters>--name /yarpdataplayer </parameters>
   <node> localhost </node>
</module>

<connection>
  <from>/file/ch3dvs:o</from>
  <to>/glhpe-framer/AE:i</to>
  <protocol> fast_tcp </protocol>
</connection>  

<connection>
  <from>/glhpe-framer/img:o</from>
  <to>/vFramer/vis/frame:i</to>
  <protocol> fast_tcp </protocol>
</connection>

<connection>
  <from>/glHpeModule/img:i</from>
  <to>/glHpeModule/img:i</to>
  <protocol> fast_tcp </protocol>
</connection>

<connection>
  <from>/glhpe-framer/img:o</from>
  <to>/view_out</to>
  <protocol>fast_tcp</protocol>
</connection>

<connection>
  <from>/file/ch3dvs:o</from>
  <to>/vFramer/vis/AE:i</to>
  <protocol> fast_tcp </protocol>
</connection>

<connection>
  <from>/vFramer/vis/image:o</from>
  <to>/yarpview/img:i</to>
  <protocol>fast_tcp</protocol>
</connection>

</application>
